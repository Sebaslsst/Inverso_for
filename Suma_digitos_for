#include <stdio.h>

int sumaDigitosFor(int num) {
    int suma = 0;
    for (; num != 0; num /= 10) {
        suma += num % 10;
    }
    return suma;
}

int main() {
    int numero;
    printf("Ingrese un número: ");
    scanf("%d", &numero);
    printf("La suma de los dígitos de %d es: %d\n", numero, sumaDigitosFor(numero));
    return 0;
}
